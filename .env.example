# Application
ENV=dev
DEBUG=True
APP_NAME=AeroOps

# Security - JWT
# Generate a strong secret key (e.g., using openssl rand -hex 32)
JWT_SECRET_KEY=your_super_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE=30
REFRESH_TOKEN_EXPIRE=7

# Security - Argon2
# These are secure defaults, but can be tuned
ARGON2__TYPE=ID
ARGON2__TIME_COST=3
ARGON2__MEMORY_COST=65536
ARGON2__PARALLELISM=4
ARGON2__HASH_LEN=32
ARGON2__SALT_LEN=16

# Infrastructure
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://devuser:changethis@localhost:5432/aerops

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6302
REDIS_DB=0

# Rate Limiting
BURST_WINDOW=600
BURST_LIMIT=100
SUSTAINED_WINDOW=3600
SUSTAINED_LIMIT=300

# Frontend Integration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Initial Admin User (Seeding)
FIRST_SUPERUSER_USERNAME=admin
FIRST_SUPERUSER_PASSWORD=changethisstrongpassword
